<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
		 http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <display-name>Test</display-name>

    <servlet>
    <servlet-name>WorkerServlet</servlet-name>
    <servlet-class>com.demo.servlet.WorkerServlet</servlet-class>
</servlet>
    <servlet-mapping>
        <servlet-name>WorkerServlet</servlet-name>
        <url-pattern>/worker</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>TripServlet</servlet-name>
        <servlet-class>com.demo.servlet.TripServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TripServlet</servlet-name>
        <url-pattern>/trip</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>TrainServlet</servlet-name>
        <servlet-class>com.demo.servlet.TrainServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TrainServlet</servlet-name>
        <url-pattern>/train</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>TicketServlet</servlet-name>
        <servlet-class>com.demo.servlet.TicketServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TicketServlet</servlet-name>
        <url-pattern>/ticket</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UserServlet</servlet-name>
        <servlet-class>com.demo.servlet.UserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/user</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>PositionServlet</servlet-name>
        <servlet-class>com.demo.servlet.PositionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PositionServlet</servlet-name>
        <url-pattern>/position  </url-pattern>
    </servlet-mapping>
</web-app>
